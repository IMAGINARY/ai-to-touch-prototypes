html(lang="en")
  head
    title= "Predict the temperature given the cloudiness and being inside!"
    link(rel='stylesheet', href='style.css')
    script(type='text/javascript', src="d3.js")
    script(src="weather.js", type="module")

  body
    svg
      text#cloudiness
      text#insideness
      text#current-temperature
      text#target-temperature
      g#edges
      g#nodes
      g#gradient
      g#input-parameters
      g#outputs
      g#node-parameters
      g#edge-parameters
      g#normalized-edge-parameters
    div(style="display:flex;")
      div
        h3 Training Data (click on row to select as input)
        table#trainingpreview
      div
        h3 Total error on training data
        #totalerror
        
